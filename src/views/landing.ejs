<!-- background image Section -->
<section
  class="text-black text-center py-5 vh-100 d-flex justify-content-center align-items-center"
  style="
    background-image: url('/img/Capture1.PNG');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  "
>
  <div class="container">
    <h1 class="fw-bold">Find Your Dream Job</h1>
    <p class="fs-4 text-black">
      Discover the best job opportunities that match your skills and interests.
    </p>
    <div>
      <a href="#" class="btn btn-lg btn-info text-white"> I'm A Job Seeker </a>
      <button
        data-bs-toggle="modal"
        data-bs-target="#staticBackdrop"
        class="btn btn-lg btn-outline-info text-white mx-2"
      >
        I'm A Recruiter
      </button>
    </div>
  </div>
</section>

<!-- Modal for registration starts-->
<div
  class="modal fade"
  id="staticBackdrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title bold" id="staticBackdropLabel">
          Recruiter Registration
        </h3>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/api/v1/auth/register" method="POST" class="p-2">
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text">User Name</span>
              <input
                required
                name="name"
                type="text"
                aria-label="name"
                class="form-control"
                placeholder="enter your username"
              />
            </div>
          </div>

          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text">Email</span>
              <input
                required
                name="email"
                type="email"
                aria-label="email"
                class="form-control"
                placeholder="enter your email"
              />
            </div>
          </div>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text">Password</span>
              <input
                required
                name="password"
                type="password"
                aria-label="password"
                class="form-control"
                placeholder="enter your password"
              />
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Register</button>
        </form>
      </div>
      <div
        class="modal-footer d-flex align-items-centre justify-content-between"
      >
        <div
          class="left d-flex flex-row align-items-centre justify-content-centre"
        >
          <!-- Button trigger login modal -->
          <span>Already registered?</span>
          <button
            type="button"
            class="btn btn-sm px-3 btn-outline-success"
            data-bs-toggle="modal"
            data-bs-target="#loginModal"
          >
            login
          </button>
        </div>
        <div>
          <a href="#"><i class="text-primary bi bi-twitter"></i></a>
          <a href="#"><i class="text-danger bi bi-instagram"></i></a>
          <a href="#"><i class="text-info bi bi-facebook"></i></a>
          <a href="#"><i class="text-success bi bi-whatsapp"></i></a>
          <a href="#"><i class="text-primary bi bi-linkedin"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal for registration ends -->

<!-- Modal for login starts -->
<div
  class="modal fade"
  id="loginModal"
  tabindex="-1"
  aria-labelledby="loginModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-success" id="exampleModalLabel">
          Recruiter Login
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/api/v1/auth/login" method="POST" class="p-2">
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text">Email</span>
              <input
                required=""
                name="email"
                type="email"
                aria-label="email"
                class="form-control"
                placeholder="enter your email"
              />
            </div>
          </div>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text">Password</span>
              <input
                required=""
                name="password"
                type="password"
                aria-label="password"
                class="form-control"
                placeholder="enter your password"
              />
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-sm btn-danger"
          data-bs-dismiss="modal"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
<!-- Modal for login ends -->
